<div class="row">
  <div id="signin" class="col-sm-4 col-sm-offset-4">
    <!-- ERROR HANDLER -->
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this pastry from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= bootstrap_form_for(@user, {url: sessions_path}) do |f| %>
      <%= f.email_field :email%>
      <%= f.password_field :password%>
      <%= f.check_box :remember_me, label: 'Remember me!', checked: true %>
      <%= f.submit 'Sign in', :class => 'btn btn-primary btn-lg btn-block'%>
    <% end %>
    <%= button_to('Sign up', new_user_path, method: 'get', data: {:controller => 'users', :action => 'create'}, :class => 'btn btn-primary btn-lg btn-block')%>
  </div>
</div>