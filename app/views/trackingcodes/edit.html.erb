<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-xs-10 col-sm-4 col-md-3">
    <h2>Add/Update Code</h2>
    <%= bootstrap_form_for(@trackingcode) do |f| %>
      <%= f.text_field :code%>
      <%= f.select :type, ["Instacart", "Postmates", "Sprig", "Package Delivery"], :include_blank => true %>
      <%= f.date_field :expiredtime, :value =>Date.today + 1.week%>
      <%= f.check_box :use_once_only, label: 'Expired after first use?'%>
      <%= f.submit 'Add Code', :class => 'btn btn-default'%>
    <% end %>
  </div>
</div>

