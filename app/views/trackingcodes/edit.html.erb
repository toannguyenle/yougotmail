<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-xs-10 col-sm-4 col-md-3">
    <% if notice or @trackingcode.errors.any? %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
        <% if @trackingcode.errors.any? %>
          <% @trackingcode.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <h2>Add/Update Code</h2>
    <%= bootstrap_form_for(@trackingcode) do |f| %>
      <%= f.text_field :code%>
      <%= f.select :type, ["Instacart", "Postmates", "Sprig", "Package Delivery"], :include_blank => true %>
      <%= f.date_field :valid_date, :value =>Date.today + 1.week%>
      <%= f.date_field :valid_from, :value =>Time.now  + 1.week%>
      <%= f.date_field :valid_to, :value =>Time.now + 1.week%>
      <%= f.check_box :use_once_only, label: 'Expired after first use?'%>
      <%= f.check_box :never_expired, label: 'Never Expired?'%>
      <%= f.check_box :is_active, label: 'Is Active?'%>
      <%= f.submit 'Update', :class => 'btn btn-default'%>
    <% end %>
  </div>
</div>

