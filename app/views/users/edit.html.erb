<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-xs-10 col-sm-4 col-md-3">
    <%= bootstrap_form_for(@user) do |f| %>
      <%= f.text_field :name%>
      <%= f.password_field :password, help: 'Must be at least 6 characters long' %>
      <%= f.password_field :password_confirmation %>
      <%= f.check_box :accept_terms, label: 'Sign up for emails.', checked: true %>
      <%= f.submit 'Update my profile', :class => 'btn btn-default'%>
      <%= link_to 'Delete my account', current_user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'left' %>
      - <%= @user.email %>
    <% end %>
  </div>
</div>
