<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-1 col-xs-10 col-sm-4 col-md-8">
    <% if notice %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
    <h2>Activities for <%= link_to current_user.name, edit_user_path(current_user) %></h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <td>@</td>
            <td>Time</td>
            <td>From Device</td>
            <td>Params</td>
            <td>Response</td>
            <td>Action</td>
          </tr>
        </thead>
        <tbody>
          <% @logs.each do |log| %>
            <tr>
              <td><%= log.created_at %></td>
              <td><%= distance_of_time_in_words(log.created_at, Time.now, include_seconds: true) %> ago</td>
              <td><%= log.fromdevice %></td>
              <td><%= log.params %></td>
              <td><%= log.response %></td>
              <td><%= link_to 'Del', log, method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <p>
    </p>

    <%= link_to 'Dashboard', user_path(current_user) %>
    <%= link_to 'Sign out âŽ‹', logout_path %>
  </div>
</div>
